<main class="contenedor">
	<form action="/vacantes/nueva" method="POST" class="default-form">
		<h3>Información General</h3>
		<div class="campo">
			<label for="">Título</label>
			<input type="text" name="titulo" placeholder="Ej: Reac Developer" required />
		</div>

		<div class="campo">
			<label for="">Empresa</label>
			<input type="text" name="empresa" placeholder="Ej: Empresa que contrata" required />
		</div>

		<div class="campo">
			<label for="">Ubicación</label>
			<input type="text" name="ubicacion" placeholder="Ej: Argentina" required />
		</div>

		<div class="campo">
			<label for="">Salario (USD)</label>
			<input type="text" name="salario" placeholder="Ej: $800 USD" required />
		</div>

		<div class="campo">
			<label>Contrato</label>
			<select name="contrato">
				<option value="" disabled selected>-- Selecciona --</option>
				<option value="Freelance">Freelance</option>
				<option value="Tiempo Completo">Tiempo Completo</option>
				<option value="Medio Tiempo">Nedio Tiempo</option>
				<option value="Por Proyecto">Por Proyecto</option>
			</select>
		</div>

		<h3>Descripciión</h3>

		<div class="campo descripcion">
			<input type="hidden" id="x" name="descripcion" />
			<label>Descripción</label>
			<trix-editor input="x"></trix-editor>
		</div>

		<h3>Conocimientos</h3>
		<ul class="lista-conocimientos">
			{{#seleccionarSkills a}}{{/seleccionarSkills}}
		</ul>

		<div class="campo centrar-horizontal">
      <input type="hidden" name="skills" id="skills">
			<input type="submit" value="Publicar" class="btn btn-azul" />

		</div>
	</form>

</main>